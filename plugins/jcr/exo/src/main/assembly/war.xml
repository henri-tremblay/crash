<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
  <id>release</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>war</format>
  </formats>

  <dependencySets>
    <dependencySet>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputDirectory>/WEB-INF/lib</outputDirectory>
      <includes>
        <include>org.crashub:crash.plugins.jcr.exo</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>WEB-INF/crash/crash.properties</exclude>
          <exclude>WEB-INF/jboss-deployment-structure.xml</exclude>
        </excludes>
      </unpackOptions>
      <includes>
        <include>org.crashub:crash.plugins.jcr.core:war</include>
      </includes>
    </dependencySet>
  </dependencySets>

  <files>
    <file>
      <source>src/main/webapp/WEB-INF/crash/crash.properties</source>
      <outputDirectory>WEB-INF/crash</outputDirectory>
    </file>
    <file>
      <source>src/main/webapp/WEB-INF/jboss-deployment-structure.xml</source>
      <outputDirectory>WEB-INF</outputDirectory>
    </file>
  </files>

</assembly>